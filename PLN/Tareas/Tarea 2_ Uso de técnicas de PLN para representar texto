    text,\n","                            add_special_tokens = True,\n","                            max_length = 64,\n","                            pad_to_max_length = True,\n","                            return_attention_mask = True,\n","                            return_tensors = 'pt',\n","                       )\n","        input_ids.append(encoded_dict['input_ids'])\n","        attention_masks.append(encoded_dict['attention_mask'])\n","\n","    input_ids = torch.cat(input_ids, dim=0)\n","    attention_masks = torch.cat(attention_masks, dim=0)\n","\n","    return input_ids, attention_masks\n","\n","# Initialize the label encoder\n","label_encoder = LabelEncoder()\n","\n","# Fit the encoder on all unique labels in your dataset\n","all_labels = pd.concat([y_train, y_test], axis=0) # Combine y_train and y_test\n","label_encoder.fit(all_labels)\n","\n","# Transform your labels to numerical values\n","y_train_encoded = label_encoder.transform(y_train)\n","y_test_encoded = label_encoder.transform(y_test)\n","\n","# Now create the tensors with the encoded labels\n","train_labels = torch.tensor(y_train_encoded.astype(int)) # No need for .values anymore\n","test_labels = torch.tensor(y_test_encoded.astype(int))\n","\n","# Crea los datasets y dataloaders\n","train_data = TensorDataset(train_inputs, train_masks, train_labels)\n","train_sampler = RandomSampler(train_data)\n","train_dataloader = DataLoader(train_data, sampler=train_sampler, batch_size=32)\n","\n","test_data = TensorDataset(test_inputs, test_masks, test_labels)\n","test_sampler = SequentialSampler(test_data)\n","test_dataloader = DataLoader(test_data, sampler=test_sampler, batch_size=32)"],"metadata":{"colab":{"base_uri":"https://localhost:8080/"},"id":"tTBA5E1pCs0_","executionInfo":{"status":"ok","timestamp":1730335930115,"user_tz":360,"elapsed":378,"user":{"displayName":"Elías Joaquín Yáñez Huerta","userId":"11326424779274297318"}},"outputId":"19289d50-1aaa-4b1f-8e42-a68f86c6307a"},"execution_count":63,